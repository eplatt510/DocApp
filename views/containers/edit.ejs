<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%= container.containerID %></h1>
        <div style="width: 30%; margin:30px auto;">
            <form action="/containers/<%= container._id %>/?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="container[containerID]" value="<%= container.containerID %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="container[altID]" value="<%= container.altID %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="container[location]" value="<%= container.location %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="container[companyName]" value="<%= container.companyName %>">
                </div>
                 <div class="form-group">
                    <input class="form-control" type="text" name="container[destroyDate]" value="<%= container.destroyDate %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="container[description]" value="<%= container.description %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="phone" name="container[subContainer]" value="<%= container.subContainer %>">
                </div>
                <div class="form-group">
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
                <a href="/containers">Go Back</a>
        </div>
        
        
    </div>
</div>

<% include ../partials/footer %>

 
 