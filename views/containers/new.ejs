<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Add a New Container</h1>
        <div style="width: 30%; margin:30px auto;">
            <form action="/containers" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="containerID" placeholder="Container/Box Number">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="altID" placeholder="Alternate Number">
                </div>
                
                <div class="form-group">
                    <select class="form-control" name="location">
                    <!--<option></option>-->
                    
                     <% locations.forEach(function(location){ %>
                    <option value="<%= location._id %>">  <%= location.location %></option>
                    <%})%> 
    
                    </select>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="companyName" placeholder="Company Name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="destroyDate" placeholder="Destroy Date">
                </div>
                <div class="form-group">
                     <textarea class="form-control" rows="4" cols="50" name="description" placeholder="Description"></textarea>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="subContainer" placeholder="Sub-Container (filefolder, etc)">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
                <a href="/containers">Go Back</a>
        </div>
      </div>
</div>

<% include ../partials/footer %>