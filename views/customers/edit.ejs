<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%= customer.name %></h1>
        <div style="width: 30%; margin:30px auto;">
            <form action="/customers/<%= customer._id %>/?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="customer[companyName]" value="<%= customer.companyName %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="customer[contact]" value="<%= customer.contact %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="customer[streetAddress]" value="<%= customer.streetAddress %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="customer[city]" value="<%= customer.city %>">
                </div>
                 <div class="form-group">
                    <input class="form-control" type="text" name="customer[state]" value="<%= customer.state %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="customer[zip]" value="<%= customer.zip %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="phone" name="customer[phone]" value="<%= customer.phone %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="email" name="customer[email]" value="<%= customer.email %>">
                </div>
                <div class="form-group">
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
                <a href="/campgrounds">Go Back</a>
        </div>
        
        
    </div>
</div>

<% include ../partials/footer %>

 