<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="container">
                <div class="caption" src="<%= customer.companyName %>"></div>
                <div class="caption-full">
                    <h4 class="pull-right"><%= customer.phone %></h4>
                    <p><h4><a><%=customer.companyName%></a></h4></p>
                    <h4><a><%=customer.contact%></a></h4>
                    <p><%= customer.email %></p>
                    <p>
                        <em>Submitted By <%= customer.author.username %></em>
                    </p>
                    <% if(currentUser && customer.author.id.equals(currentUser._id)){ %>
                        <a class="btn btn-xs btn-warning" href="/customers/<%= customer._id %>/edit">Edit</a>
                        <form id="delete-form" action="/customers/<%= customer._id %>?_method=DELETE" method="POST">   
                            <button class="btn btn-xs btn-danger">Delete</button>
                        
                        </form>
                    <% }%>
                </div>
            </div>
            
            
            
            
            
            
            
            
            
            
            
            
        </div>
    </div>
</div>

<% include ../partials/footer %>

 