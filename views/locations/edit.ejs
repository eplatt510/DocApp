<% include ../partials/header %>


<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%= location.location %></h1>
        <div style="width: 30%; margin:30px auto;">
            <form action="/locations/<%= location._id %>/?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="location[location]" value="<%= location.location %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="location[quantity]" value="<%= location.quantity %>">
                </div>
                <div class="form-group">
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
                <a href="/locations">Go Back</a>
        </div>
        
        
    </div>
</div>

<% include ../partials/footer %>

 